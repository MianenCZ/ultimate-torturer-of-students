<Window x:Class="UTS.WPF.CreateClassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource CreateClassDialog_Header}"
        Width="900" Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        SizeToContent="Manual">

    <DockPanel LastChildFill="True" Margin="12">

        <!-- Buttons -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    IsCancel="True"
                    Click="Cancel_Click"/>

            <Button x:Name="OkButton"
                    Content="OK"
                    Width="100"
                    IsDefault="True"
                    Click="Ok_Click"/>
        </StackPanel>

        <!-- Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!-- Left: Students -->
            <GroupBox Grid.Column="0" Header="{DynamicResource CreateClassDialog_Students_Header}">
                <Grid Margin="8">
                    <TextBox x:Name="StudentsTextBox"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             TextWrapping="NoWrap"
                             FontFamily="Consolas"
                             SpellCheck.IsEnabled="False"/>
                </Grid>
            </GroupBox>

            <!-- Right: Class info -->
            <GroupBox Grid.Column="2" Header="{DynamicResource CreateClassDialog_Class_Settings}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{DynamicResource CreateClassDialog_Class_Name}" Margin="0,0,0,4"/>
                    <TextBox Grid.Row="0" Margin="0,22,0,0"
                             x:Name="ClassNameTextBox"
                             MaxLength="128"/>

                    <TextBlock Grid.Row="2" Text="{DynamicResource CreateClassDialog_Class_Test_Count}" Margin="0,0,0,4"/>
                    <TextBox Grid.Row="2" Margin="0,22,0,0"
                             x:Name="TestsTextBox"
                             PreviewTextInput="TestsTextBox_PreviewTextInput"/>

                    <!-- Validation message -->
                    <TextBlock Grid.Row="4"
                               x:Name="ValidationText"
                               Foreground="Red"
                               TextWrapping="Wrap"/>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
